<div class="container">
  <h1 class="my-3">Room <%= @room.id %></h1>
  <h6>Current Patients:</h6>
  <div class="row d-flex col-3 ps-2">
    <% @room.patients.each do |patient| %>
      <div class="card col-12 my-2">
        <%= link_to patient.name, patient %>
      </div>
    <% end %>
  </div>

  <% if @room.space_left_in_room? %>
    <div class="row my-3">
      <div class="d-flex">
        <%= link_to "Add patients to room", add_patients_to_room_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>
