<div class="container">
  <h1 class="my-3">All Patients:</h1>
  <div class="row d-flex">
    <% @patients.each do |patient| %>
      <div class="card col-3 mx-5 my-3">
        <%= link_to patient.name, patient %>
        <% if patient.room%>
          <p>Staying at: <%= link_to "Room #{patient.room.id}", room_path(patient.room) %></p>
        <% elsif patient.under_care %>
          <p>Patient currently does not have a room</p>
        <% else %>
          <p>Patient currently not under care</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row my-3">
    <div class="d-flex">
      <%= link_to "Add a new patient", new_patient_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row my-3">
    <div class="d-flex">
      <%= link_to "See all rooms", rooms_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
